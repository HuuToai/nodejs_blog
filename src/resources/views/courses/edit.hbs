<div class="mt-4">
    <h3>sửa khóa học</h3>
    <form method="post" action="/courses/{{courses.id}}?_method=PUT">
        <div class="mb-3">
            <label for="name" class="form-label">Tên khóa học</label>
            <input type="text" class="form-control" value="{{courses.name}}" id="name" name="name">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Mô tả</label>
            <textarea class="form-control" id="description" name="description">{{courses.description}}</textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Ảnh</label>
            <input class="form-control" name="image" value="{{courses.image}}" id="image" rows="3"></input>
        </div>
        <div class="mb-3">
            <label for="video_id" class="form-label">ID video</label>
            <input type="text" class="form-control" value="{{courses.video_id}}" id="video_id" name="video_id">
        </div>
        <div class="mb-3">
            <label for="level" class="form-label">Trình độ</label>
            <input type="text" class="form-control" value="{{courses.level}}" id="level" name="level">
        </div>

        <button type="submit" class="btn btn-primary">Sửa khóa học</button>
    </form>
</div>